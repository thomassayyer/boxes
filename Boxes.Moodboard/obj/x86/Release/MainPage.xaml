<Page x:Class="Boxes.Moodboard.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Boxes.Moodboard"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Button Content="&#xE700;"
                Height="48"
                VerticalAlignment="Top"
                Style="{StaticResource PrimaryButtonStyle}"
                Width="48"
                FontFamily="Segoe MDL2 Assets" />
        <Rectangle Fill="White"
                   Height="48"
                   Margin="48,0,0,0"
                   VerticalAlignment="Top"
                   d:LayoutOverrides="LeftPosition, RightPosition" />
        <TextBlock HorizontalAlignment="Left"
                   Height="22"
                   Margin="101,10,0,0"
                   TextWrapping="Wrap"
                   Text="Accueil"
                   VerticalAlignment="Top"
                   Width="54" />
        <Button Content="&#xE72B;"
                Height="48"
                Margin="48,0,0,0"
                VerticalAlignment="Top"
                Width="48"
                FontFamily="Segoe MDL2 Assets"
                Style="{StaticResource DefaultButtonStyle}" />
        <StackPanel Margin="10,60,0,10"
                    HorizontalAlignment="Left"
                    Width="317"
                    d:LayoutOverrides="TopPosition, BottomPosition">
            <Grid Margin="10,0"
                  Background="White"
                  CornerRadius="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image x:ConnectionId='13' x:Name="image"
                       Margin="10"
                       d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"
                       Source="Assets/StoreLogo.png" />
                <StackPanel Grid.Column="1"
                            Margin="-0.4,0,0,0.4"
                            d:LayoutOverrides="LeftPosition, RightPosition">
                    <TextBlock x:ConnectionId='15' x:Name="textBlock1"
                               Margin="10,10,10.4,0"
                               TextWrapping="Wrap"
                               Text="Author"
                               FontSize="{StaticResource LargeFontSize}" />
                    <TextBlock x:ConnectionId='16' x:Name="textBlock2"
                               Height="23"
                               Margin="10,0,9.8,0"
                               TextWrapping="Wrap"
                               Text="Box"
                               FontSize="{StaticResource SmallFontSize}"
                               Foreground="{StaticResource SmallBrush}" />
                </StackPanel>
                <TextBlock x:ConnectionId='14' x:Name="textBlock3"
                           Grid.ColumnSpan="2"
                           Margin="10,0,10,15"
                           Grid.Row="1"
                           TextWrapping="Wrap"
                           Text="Lorem ipsum dolor sit amet perscum est pliturale pristum botoxi prout ..." />
            </Grid>
            <TextBlock x:ConnectionId='4' x:Name="textBlock4"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="64"
                       Foreground="{StaticResource SmallBrush}"
                       RenderTransformOrigin="0.769,0.775"
                       Margin="0,10">
            	<Span FontFamily="Segoe MDL2 Assets">
            		<Run Text="&#xE108;" />
            	</Span>
            </TextBlock>
            <Grid Margin="10,0"
                  Background="White"
                  CornerRadius="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='10' x:Name="textBlock7"
                           Grid.ColumnSpan="2"
                           Margin="10,0,10,15"
                           Grid.Row="1"
                           TextWrapping="Wrap"
                           Text="Lorem ipsum dolor sit amet perscum est pliturale pristum botoxi prout ..." />
                <TextBlock x:ConnectionId='11' x:Name="textBlock"
                           Grid.Column="1"
                           Margin="0,10,10,0"
                           TextWrapping="Wrap"
                           Text="30/12/2015 03:00"
                           VerticalAlignment="Top"
                           RenderTransformOrigin="0.039,0.52"
                           d:LayoutOverrides="LeftPosition, RightPosition"
                           HorizontalAlignment="Right"
                           FontSize="{StaticResource SmallFontSize}"
                           Foreground="{StaticResource SmallBrush}" />
                <TextBlock x:ConnectionId='12' x:Name="textBlock5"
                           HorizontalAlignment="Left"
                           Margin="10"
                           TextWrapping="Wrap"
                           Text="Author"
                           FontSize="{StaticResource LargeFontSize}" />
            </Grid>
            <TextBlock x:ConnectionId='5' x:Name="textBlock4_Copy"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="64"
                       Foreground="{StaticResource SmallBrush}"
                       RenderTransformOrigin="0.769,0.775"
                       Margin="0,10">
            	<Span FontFamily="Segoe MDL2 Assets">
            		<Run Text="&#xE108;" />
            	</Span>
            </TextBlock>
            <Grid Margin="10,0"
                  Background="White"
                  CornerRadius="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='6' x:Name="textBlock6"
                           HorizontalAlignment="Left"
                           Margin="10,10,0,9.6"
                           TextWrapping="Wrap"
                           Text="Box"
                           d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin, TopPosition, BottomPosition"
                           FontSize="{StaticResource LargeFontSize}"
                           Width="30" />
                <TextBlock x:ConnectionId='7' x:Name="textBlock8"
                           Margin="10,10.4,10,9.6"
                           Grid.Row="1"
                           TextWrapping="Wrap"
                           Text="Lorem ipsum dolor sit amet perscum est pliturale pristum botoxi prout ..."
                           d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin, LeftPosition, RightPosition" />
                <StackPanel Margin="0,10,10,10"
                            Grid.Row="2"
                            d:LayoutOverrides="LeftPosition, RightPosition"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">
                    <TextBlock x:ConnectionId='8' x:Name="textBlock10"
                               Margin="0"
                               TextWrapping="Wrap"
                               Text="20"
                               FontSize="{StaticResource SmallFontSize}"
                               VerticalAlignment="Top"
                               Foreground="{StaticResource SmallBrush}" />
                    <TextBlock x:ConnectionId='9' x:Name="textBlock9"
                               Margin="0"
                               TextWrapping="Wrap"
                               FontFamily="Segoe MDL2 Assets"
                               VerticalAlignment="Center">
            			<Span FontSize="19.3333333333333"
                              FontFamily="Segoe MDL2 Assets">
            				<Run Text="&#xE13D;" />
            			</Span>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel Margin="332,48,0,0"
                    VerticalAlignment="Top"
                    d:LayoutOverrides="LeftPosition, RightPosition"
                    Background="White">
            <TextBlock x:ConnectionId='3' x:Name="textBlock11"
                       Margin="15"
                       TextWrapping="Wrap">
            	<Span>
            		<Run Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean consectetur nunc felis, sed feugiat felis luctus vel. Praesent accumsan enim eget ultrices viverra. In finibus ac metus ut dignissim. Fusce leo ligula, molestie eu imperdiet vitae, eleifend elementum lorem." />
            	</Span>
            </TextBlock>
        </StackPanel>
        <Button x:ConnectionId='1' x:Name="button"
                Content="Dark button"
                HorizontalAlignment="Left"
                Height="76"
                Margin="332,158,0,0"
                VerticalAlignment="Top"
                Style="{StaticResource DarkPrimaryButtonStyle}"
                Width="151" />
        <Button x:ConnectionId='2' x:Name="button1"
                Content="Warning Button"
                HorizontalAlignment="Left"
                Margin="332,239,0,0"
                VerticalAlignment="Top"
                Width="151"
                Height="75"
                Style="{StaticResource WarningButtonStyle}" />
    </Grid>

</Page>

