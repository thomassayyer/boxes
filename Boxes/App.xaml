        <!-- Data templates -->
        <DataTemplate x:Key="PostsDataTemplate">
            <Grid Background="White"
                  CornerRadius="5"
                  Width="300"
                  MinHeight="150">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="10,10,10,0"
                               TextWrapping="Wrap"
                               Text="{Binding Author}"
                               FontSize="{StaticResource LargeFontSize}" />
                    <TextBlock Margin="10,0,10,0"
                               TextWrapping="Wrap"
                               Text="{Binding Box}"
                               FontSize="{StaticResource SmallFontSize}"
                               Foreground="{StaticResource SmallBrush}" />
                </StackPanel>
                <TextBlock Margin="10,10,10,15"
                           Grid.Row="1"
                           TextWrapping="Wrap"
                           Text="{Binding Content, Converter={StaticResource MaxLengthConverter}, ConverterParameter={StaticResource MaxPostContentLength}}" />
                <StackPanel Orientation="Horizontal"
                            Grid.Row="2"
                            HorizontalAlignment="Right"
                            Margin="10"
                            VerticalAlignment="Top">
                    <TextBlock Margin="0"
                               Text="{Binding CommentsCount}"
                               FontSize="{StaticResource SmallFontSize}"
                               VerticalAlignment="Top"
                               Foreground="{StaticResource SmallBrush}" />
                    <TextBlock Margin="5,0,0,0"
                               Text=""
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="{StaticResource SmallBrush}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="BoxesDataTemplate">
            <Grid Background="White"
                  CornerRadius="5"
                  Width="300"
                  MinHeight="180">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Margin="10,10,0,10"
                           TextWrapping="Wrap"
                           Text="{Binding Title}"
                           FontSize="{StaticResource LargeFontSize}"
                           Grid.ColumnSpan="2" />
                <TextBlock Margin="10"
                           Grid.Row="1"
                           TextWrapping="Wrap"
                           Text="{Binding Description, Converter={StaticResource MaxLengthConverter}, ConverterParameter={StaticResource MaxBoxDescriptionLength}}"
                           Grid.ColumnSpan="2" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10"
                            Grid.Row="2"
                            Grid.Column="0">
                    <TextBlock Margin="0"
                               TextWrapping="Wrap"
                               Text="{Binding PostsCount}"
                               FontSize="{StaticResource SmallFontSize}"
                               VerticalAlignment="Top"
                               Foreground="{StaticResource SmallBrush}" />
                    <TextBlock Margin="5,0,0,0"
                               Text=""
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="{StaticResource SmallBrush}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="10"
                            Grid.Row="2"
                            Grid.Column="1">
