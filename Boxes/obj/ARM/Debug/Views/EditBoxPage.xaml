<Page x:Class="Boxes.Views.EditBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Boxes.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      DataContext="{Binding EditBoxVM, Source={StaticResource Locator}}"
      RequestedTheme="Light">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <StackPanel Orientation="Vertical"
                        Margin="15">

                <TextBox Text="{Binding Title, Mode=TwoWay}">
                    <TextBox.Header>
                        <TextBlock Text="Titre"
                                   x:Uid="TitleTextBlock" />
                    </TextBox.Header>
                </TextBox>

                <TextBox Text="{Binding Description, Mode=TwoWay}"
                         Margin="0,10,0,0"
                         AcceptsReturn="True"
                         Height="100"
                         TextWrapping="Wrap">
                    <TextBox.Header>
                        <TextBlock Text="Description"
                                   x:Uid="DescriptionTextBlock" />
                    </TextBox.Header>
                </TextBox>

                <Button Style="{StaticResource WarningButtonStyle}"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"
                        Command="{Binding UpdateBoxCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <ProgressRing Margin="0,0,10,0"
                                          Height="10"
                                          Width="10"
                                          Foreground="White"
                                          IsActive="{Binding IsUpdating, Mode=OneWay}"
                                          Visibility="{Binding IsUpdating, Converter={StaticResource VisibilityConverter}, Mode=OneWay}" />
                            <TextBlock x:Uid="EditTextBlock"
                                       Text="Modifier" />
                        </StackPanel>
                    </Button.Content>
                </Button>

            </StackPanel>

        </ScrollViewer>

    </Grid>

</Page>

